{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"], //TODO: Currently not used as we'd need to handle it in esbuild as well.
    },
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": false, // We can not use strict mode as this will break the IIFE Format expected by Amplenote Plugin Builder
    "esModuleInterop": true,
    "outDir": "lib",
    "rootDir": "src",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
}
